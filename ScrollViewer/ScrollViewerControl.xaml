<Window x:Class="WpfHeatMap.ScrollViewerControl"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfHeatMap"
        mc:Ignorable="d"
        Title="ScrollViewerControl" Height="300" Width="300" WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/ScrollViewer/ScrollStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <ControlTemplate x:Key="buttonSt" TargetType="Button">
                <Border CornerRadius="6" BorderThickness="2" Background="Gray" BorderBrush="Green">
                    <TextBlock Text="按钮" Margin="33,3" FontFamily="微软雅黑" FontSize="14" Foreground="Goldenrod"></TextBlock>
                </Border>
            </ControlTemplate>
        </ResourceDictionary>
    </Window.Resources>
    <Grid Name="stri">
        <Button Width="100" Height="30" Template="{DynamicResource buttonSt}" Click="Button_Click" Panel.ZIndex="99"></Button>
        <ScrollViewer Margin="0" Template="{DynamicResource ScrollViewerControlTemplate1}">
            <TextBlock TextWrapping="Wrap"><Run></Run></TextBlock>
        </ScrollViewer>
    </Grid>
</Window>
